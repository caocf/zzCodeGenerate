<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.zz.bsmcc.base.dao.TcgColumnValidateDAO">
 	<!-- 映射配置 -->
	<resultMap id="TcgColumnValidateResultMap" type="com.zz.bsmcc.base.bo.TcgColumnValidateBO" >
         	<result column="id" property="id"/>
         	<result column="table_id" property="tableId"/>
         	<result column="column_id" property="columnId"/>
         	<result column="rex" property="rex"/>
         	<result column="msg" property="msg"/>
         	<result column="create_time" property="createTime"/>
         	<result column="create_user_id" property="createUserId"/>
         	<result column="update_time" property="updateTime"/>
         	<result column="update_user_id" property="updateUserId"/>
         	<result column="version_no" property="versionNo"/>
	</resultMap>


    <!-- 校验条件配置 -->
    <sql id="TcgColumnValidate4CheckQueryFilter">
        <where>


						<if test="id != null and id != ''"> AND T.id != #{id} </if>





                        <if test="tableId != null and tableId != ''"> AND T.table_id = #{tableId} </if>





                        <if test="columnId != null and columnId != ''"> AND T.column_id = #{columnId} </if>





                        <if test="rex != null and rex != ''"> AND T.rex = #{rex} </if>





                        <if test="msg != null and msg != ''"> AND T.msg = #{msg} </if>




					<if test="createTime != null"> AND T.create_time = #{createTime} </if>



                        <if test="createUserId != null and createUserId != ''"> AND T.create_user_id = #{createUserId} </if>




					<if test="updateTime != null"> AND T.update_time = #{updateTime} </if>



                        <if test="updateUserId != null and updateUserId != ''"> AND T.update_user_id = #{updateUserId} </if>




					<if test="versionNo != null"> AND T.version_no = #{versionNo} </if>


        </where>
    </sql>




    <!-- 根据条件查询第一条列校验 -->
    <select id="selectCheck" parameterType="com.zz.bsmcc.base.bo.TcgColumnValidateBO" resultMap="TcgColumnValidateResultMap">
        SELECT T.* FROM tcg_column_validate T
        <include refid="TcgColumnValidate4CheckQueryFilter"/>  limit 1
    </select>


</mapper>
